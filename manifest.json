{
  "manifest_version": 2,
  "name": "Twitch Vertical Layout", 
  "version": "1.0",
  "description": "Changes Twitch layout to vertical on window resize",
  "permissions": [
    "https://www.twitch.tv/*",
    "https://www.twitch.tv/popout/*/chat?popout="
  ],
  "content_scripts": [
    {
      "matches": ["https://www.twitch.tv/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_start"
    }
  ]
}
